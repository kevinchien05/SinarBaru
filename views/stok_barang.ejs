    async function generateNumber(counterTmp) {
      let tmp = parseInt(counterTmp);
      tmp++;
      exists = true;
      while (exists) {
        formattedCounter = tmp.toString().padStart(3, '0');
        result = `A${formattedCounter}`;
        let kode = await axios.get(`/api/stok/${result}`);
        if (kode.data.response) {
          tmp++;
        } else {
          exists = false;
        }
      }
      return result;
    }

