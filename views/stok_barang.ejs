  <!-- Container for Showing Stok List -->
  <div class="list-data-awal">
    <div class="before-divider">
      <div class="item-for-all">
        Stok
      </div>

      <!-- Search Button -->
      <div class="item-search padright">
        <input class="form-control" type="search" placeholder="Cari" aria-label="Search" class="rounded"
          id="search-input" value="<%= search %>" onkeypress="handleKeyPress(event)">
      </div>

      <!-- Adding New Produk -->
      <div class="item-btn">
        <button type="button" id="add" class="btn btn-success" onclick="add('<%= counter %>')">Tambah Produk <svg
            xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus"
            viewBox="0 0 16 16">
            <path
              d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
          </svg></button>
      </div>
      <br>
      <br>

      <!-- The Add form -->
      <div class="form-popup" id="addForm">
        <form action="" method="" enctype="multipart/form-data" id="product-form" class="form-container">
          <h2 class="text-form">Produk Baru</h2>

          <label for="file">Gambar</label>
          <br>
          <div class="choose-file-bg">
            <input type="file" id="file" name="file" required>
          </div>
          <br>

          <label for="ProductCode" hidden>Kode Barang</label>
          <input type="text" name="ProductCode" id="ProductCode" required hidden>

          <label for="ProductName">Nama Barang</label>
          <input type="text" name="ProductName" id="ProductName" required>

          <label for="Unit">Satuan</label>
          <input type="text" name="Unit" id="Unit" required>

          <label for="SellPrice">Harga</label>
          <input type="text" name="SellPrice" id="SellPrice" required>

          <label for="BuyPrice" hidden>Harga Beli</label>
          <input type="text" name="BuyPrice" id="BuyPrice" value="0" hidden>

          <label for="Qnt" hidden>Kuantitas</label>
          <input type="text" name="Qnt" id="Qnt" value="0" hidden>

          <p id="error-message" style="color: red;"></p>

          <div class="button-form">
            <button type="submit" class="btn btn-success yes-form-btn" id="simpan">Simpan</button>
            <button type="button" class="btn btn-danger no-form-btn" onclick="closeForm()">Batal</button>
          </div>
        </form>
      </div>

    </div>

    <div class="title-divider-stok">
