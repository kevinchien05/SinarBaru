          <p id="kode-4">
            <%= products[i].Qnt %>
          </p>
        </div>
        <div class="item-stok" id="item">
          <p id="kode">
            <%= products[i].Unit %>
          </p>
        </div>
        <div class="item-stok" id="item">
          <p id="kode">
