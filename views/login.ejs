<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="css/style.css" rel="stylesheet">
    <title>Login Page</title>

<body>
    <div class="global-container">
        <div class="container_login">
            <form class="w-50 mx-auto py-5 p-4" action="/login" method="post" name="login">
                <h2>Sinar Baru</h2>
                <div class="mb-2">
                    <label for="username" class="form-label">Nama Pengguna</label>
                    <input type="username" class="form-control" id="username" name="username">
                </div>
                <div class="mb-2">
                    <div class="label-icon-login">
                        <label for="password" class="form-label">Kata Sandi</label>
                        <div class="hide-icon" id="hide-unhide">
                            <button type="button" class="button-hide-unhide-login" onclick="changeStatus()"
                                id="show-button">
                                <span class="hide-unhide-icon"><i class="bi bi-eye-slash"></i></span>
                                <label for="password" class="form-label" id="hide-show">Tampilkan</label>
                            </button>
                        </div>
                    </div>
                    <input type="password" class="form-control for-password" id="myPassword" name="myPassword">
                </div>
                <% if (msg) { %>
                    <div>
                        <span style="color: red;">
                            <%= msg %>
                        </span>
                    </div>
                    <% } %>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary mt-3" type="submit">Login</button>
                        </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script>
        var passField = document.getElementById("myPassword");
        const togglePass = document.getElementById("hide-show");
        const eyesTag = document.querySelector(".hide-unhide-icon i");
        function changeStatus() {
            if (passField.type === "password") {
                eyesTag.classList.remove("bi-eye-slash");
                eyesTag.classList.add("bi-eye");
                passField.type = "text";
                togglePass.innerHTML = "Sembunyi";
            } else if (passField.type === "text") {
                eyesTag.classList.remove("bi-eye");
                eyesTag.classList.add("bi-eye-slash");
                passField.type = "password";
                togglePass.innerHTML = "Tampilkan";
            };
        };
    </script>
</body>

</html>